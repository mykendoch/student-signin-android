<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".activityVerification">
	<ImageView
		android:layout_marginTop="50dp"
		android:layout_marginLeft="10dp"
		android:layout_width="150dp"
		android:layout_height="150dp"
		android:id="@+id/doubtingImg"
		android:src="@drawable/question"
		android:text="ðŸ¤” "/>
	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_below="@id/doubtingImg"
		android:id="@+id/doubtingText"
		android:layout_margin="10dp"
		android:fontFamily="sans-serif-condensed"
		android:textStyle="bold"
		android:textSize="30sp"
		android:text="Mhh! I'm still doubting your Identity"/>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:fontFamily="sans-serif-light"
		android:layout_margin="10dp"
		android:id="@+id/enterCodeInstructions"
		android:layout_below="@id/doubtingText"
		android:text="Please enter the 6 digit code we sent to 2547******89"
	/>
	<EditText
		android:layout_width="200dip"
		android:layout_height="50dp"
		android:background="@drawable/clear_edit_text"
		android:layout_below="@id/enterCodeInstructions"
		android:hint="Type here.."
		android:inputType="number"
		android:maxLength="6"
		android:padding="10dp"
		android:id="@+id/otpCode"
		android:textStyle="bold"
		android:layout_marginLeft="10dp"
		/>
	<Button
		android:layout_width="wrap_content"
		android:text="CONFIRM"
		android:paddingLeft="20dp"
		android:enabled="false"
		android:id="@+id/btnVerify"
		android:onClick="verifyCode"
		android:paddingRight="20dp"
		android:layout_marginTop="30dp"
		android:layout_marginLeft="10dp"
		android:elevation="10dp"
		android:layout_below="@id/otpCode"
		style="@style/AppTheme.Button"
		android:layout_height="wrap_content"/>
</RelativeLayout>