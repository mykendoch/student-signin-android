<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="yasis.apps.sasi">
	
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
	<uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
	
	<application
			android:allowBackup="true"
			android:icon="@drawable/school"
			android:label="@string/app_name"
			android:roundIcon="@drawable/school"
			android:supportsRtl="true"
			android:theme="@style/AppTheme">
		<activity android:name=".activityVerification">
		</activity>
		<activity android:name=".activityAttend">
		</activity>
		<activity android:name=".activityLogin">
		</activity>
		<activity android:name=".activitySplash">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		
		<receiver android:name=".OyamNet.NetBroadCastListener"/>
	</application>

</manifest>